OPENROUTER_API_KEY=your_openrouter_api_key_here
ENABLE_TTS=true
ENABLE_STT=true

# Modo de push-to-talk: keyboard ou xbox
PTT_MODE=keyboard

# Configuracao para modo keyboard
# Tecla para push-to-talk (pressione e segure para gravar)
# Opcoes: m, p, f1, f2, etc.
PTT_KEY=m

# Configuracao para modo xbox
# Botao do controle Xbox para push-to-talk
# Opcoes: A, B, X, Y, LB, RB, BACK, START, LS, RS
# Se nao especificado, o programa vai perguntar
XBOX_BUTTON=RB
